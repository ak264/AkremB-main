---
import { formatDate } from '../utils';
import { Image } from 'astro:assets';

const { content } = Astro.props;
const { title, description, pubDate, updatedDate, coverImage } = content.data;

// Safely parse dates
const published = new Date(pubDate);
const updated = updatedDate ? new Date(updatedDate) : null;
---

<div class="mb-8">
  {coverImage && (
    <div class="mb-6">
      <Image
        src={coverImage}
        alt={`Cover image for ${title}`}
        width={1020}
        height={510}
        class="rounded-xl shadow-md"
      />
    </div>
  )}

  <h1 class="text-4xl font-bold mb-2">{title}</h1>

  <div class="text-gray-600 dark:text-gray-400 mb-4">
    <time datetime={published.toISOString()}>
      {formatDate(published)}
    </time>
    {updated && (
      <span>
        â€¢ Updated on <time datetime={updated.toISOString()}>
          {formatDate(updated)}
        </time>
      </span>
    )}
  </div>

  <p class="text-xl text-gray-700 dark:text-gray-300">{description}</p>
</div>
