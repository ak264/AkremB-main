---
const { color = "default", class: className, ...props } = Astro.props;

const colorVariants = {
  default: "border border-zinc-300 dark:border-zinc-700 rounded-2xl text-sm text-zinc-700 dark:text-zinc-300 px-2 py-0.5 transition-all duration-700 hover:border-zinc-700 dark:hover:border-zinc-300",
  blue: "bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-100 rounded-2xl text-sm px-2 py-0.5",
  green: "bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-100 rounded-2xl text-sm px-2 py-0.5",
  red: "bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-100 rounded-2xl text-sm px-2 py-0.5",
  yellow: "bg-yellow-100 text-yellow-700 dark:bg-yellow-900 dark:text-yellow-100 rounded-2xl text-sm px-2 py-0.5",
};
---

<span class:list={[colorVariants[color], className]} {...props}>
  <slot />
</span>
